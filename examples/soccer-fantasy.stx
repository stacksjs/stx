  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Tab Navigation
      const tabs = document.querySelectorAll('.nav-tab');
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          tabs.forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
        });
      });

      // Mobile Navigation
      const mobileNavItems = document.querySelectorAll('.mobile-nav-item');
      mobileNavItems.forEach(item => {
        item.addEventListener('click', () => {
          mobileNavItems.forEach(i => i.classList.remove('active'));
          item.classList.add('active');
        });
      });

      // Player Card Click - Toggle Captain
      const playerCards = document.querySelectorAll('.player-card:not(.bench-player)');
      playerCards.forEach(card => {
        card.addEventListener('click', () => {
          // Add subtle animation
          card.style.transform = 'scale(0.95)';
          setTimeout(() => {
            card.style.transform = '';
          }, 150);
        });
      });

      // Formation Select
      const formationSelect = document.querySelector('.formation-select');
      formationSelect.addEventListener('change', (e) => {
        console.log('Formation changed to:', e.target.value);
      });

      // Chip Click
      const chips = document.querySelectorAll('.chip.available');
      chips.forEach(chip => {
        chip.addEventListener('click', () => {
          chip.style.transform = 'scale(0.95)';
          setTimeout(() => {
            chip.style.transform = '';
          }, 150);
        });
      });

      // Save Team Button
      const saveBtn = document.querySelector('.btn-primary');
      saveBtn.addEventListener('click', () => {
        saveBtn.textContent = 'Saving...';
        setTimeout(() => {
          saveBtn.textContent = 'Saved!';
          saveBtn.style.background = 'linear-gradient(135deg, #10b981 0%, #14b8a6 100%)';
          setTimeout(() => {
            saveBtn.textContent = 'Save Team';
            saveBtn.style.background = '';
          }, 2000);
        }, 1000);
      });

      // Auto Pick Button
      const autoPickBtn = document.querySelector('.btn-secondary');
      autoPickBtn.addEventListener('click', () => {
        autoPickBtn.textContent = 'Picking...';
        setTimeout(() => {
          autoPickBtn.textContent = 'Auto Pick';
        }, 1500);
      });
    });
  </script>
