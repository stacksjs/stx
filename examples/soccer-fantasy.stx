  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --secondary: #10b981;
      --accent: #f59e0b;
      --danger: #ef4444;
      --bg-dark: #0f172a;
      --bg-card: #1e293b;
      --bg-card-hover: #334155;
      --text-primary: #f8fafc;
      --text-secondary: #94a3b8;
      --text-muted: #64748b;
      --border: #334155;
      --gradient-1: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      --gradient-2: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);
      --gradient-gold: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--bg-dark);
      color: var(--text-primary);
      min-height: 100vh;
      line-height: 1.5;
    }

    /* Header */
    .header {
      background: var(--bg-card);
      border-bottom: 1px solid var(--border);
      padding: 1rem;
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
    }

    .header-content {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 700;
      font-size: 1.25rem;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: var(--gradient-1);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
    }

    .header-stats {
      display: flex;
      gap: 1.5rem;
    }

    .header-stat {
      text-align: center;
    }

    .header-stat-value {
      font-weight: 700;
      font-size: 1.125rem;
      color: var(--primary);
    }

    .header-stat-label {
      font-size: 0.75rem;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .user-menu {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .notification-btn {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      background: var(--bg-card-hover);
      border: none;
      color: var(--text-primary);
      cursor: pointer;
      position: relative;
      font-size: 1.25rem;
      transition: all 0.2s;
    }

    .notification-btn:hover {
      background: var(--primary);
    }

    .notification-badge {
      position: absolute;
      top: -4px;
      right: -4px;
      width: 18px;
      height: 18px;
      background: var(--danger);
      border-radius: 50%;
      font-size: 0.625rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--gradient-2);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      cursor: pointer;
      transition: transform 0.2s;
    }

    .avatar:hover {
      transform: scale(1.05);
    }

    /* Main Layout */
    .main-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 1.5rem 1rem;
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    @media (min-width: 1024px) {
      .main-container {
        grid-template-columns: 280px 1fr 320px;
        padding: 2rem;
      }
    }

    /* Sidebar */
    .sidebar {
      display: none;
    }

    @media (min-width: 1024px) {
      .sidebar {
        display: block;
      }
    }

    .sidebar-card {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid var(--border);
    }

    .sidebar-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 1rem;
    }

    /* Team Stats Card */
    .team-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .stat-item {
      background: var(--bg-card-hover);
      border-radius: 12px;
      padding: 1rem;
      text-align: center;
    }

    .stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
    }

    .stat-value.highlight {
      color: var(--primary);
    }

    .stat-label {
      font-size: 0.75rem;
      color: var(--text-muted);
      margin-top: 0.25rem;
    }

    /* Budget Bar */
    .budget-bar {
      margin-top: 1rem;
    }

    .budget-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.5rem;
    }

    .budget-label {
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .budget-value {
      font-weight: 600;
      color: var(--secondary);
    }

    .budget-track {
      height: 8px;
      background: var(--bg-card-hover);
      border-radius: 4px;
      overflow: hidden;
    }

    .budget-fill {
      height: 100%;
      background: var(--gradient-2);
      border-radius: 4px;
      transition: width 0.3s ease;
    }

    /* Chips */
    .chips-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.75rem;
    }

    .chip {
      background: var(--bg-card-hover);
      border-radius: 10px;
      padding: 0.75rem;
      text-align: center;
      cursor: pointer;
      transition: all 0.2s;
      border: 2px solid transparent;
    }

    .chip:hover {
      border-color: var(--primary);
    }

    .chip.available {
      border-color: var(--secondary);
    }

    .chip.used {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .chip-icon {
      font-size: 1.25rem;
      margin-bottom: 0.25rem;
    }

    .chip-name {
      font-size: 0.75rem;
      font-weight: 600;
    }

    /* Navigation Tabs */
    .nav-tabs {
      display: flex;
      gap: 0.5rem;
      background: var(--bg-card);
      padding: 0.5rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .nav-tab {
      flex: 1;
      min-width: max-content;
      padding: 0.75rem 1.25rem;
      border: none;
      background: transparent;
      color: var(--text-secondary);
      font-weight: 600;
      font-size: 0.875rem;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
    }

    .nav-tab:hover {
      color: var(--text-primary);
      background: var(--bg-card-hover);
    }

    .nav-tab.active {
      background: var(--gradient-1);
      color: white;
    }

    /* Main Content */
    .content-area {
      min-width: 0;
    }

    /* Pitch View */
    .pitch-container {
      background: var(--bg-card);
      border-radius: 20px;
      padding: 1.5rem;
      border: 1px solid var(--border);
      overflow: hidden;
    }

    .pitch-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .pitch-title {
      font-size: 1.25rem;
      font-weight: 700;
    }

    .formation-select {
      background: var(--bg-card-hover);
      border: 1px solid var(--border);
      color: var(--text-primary);
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
    }

    .pitch {
      background: linear-gradient(180deg, #15803d 0%, #166534 50%, #15803d 100%);
      border-radius: 16px;
      padding: 1.5rem 1rem;
      position: relative;
      min-height: 500px;
    }

    .pitch::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 10%;
      right: 10%;
      height: 2px;
      background: rgba(255, 255, 255, 0.3);
    }

    .pitch::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80px;
      height: 80px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
    }

    .pitch-row {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    @media (min-width: 640px) {
      .pitch-row {
        gap: 1rem;
        margin-bottom: 1.5rem;
      }
    }

    .player-card {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 0.5rem;
      text-align: center;
      width: 70px;
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
      border: 2px solid transparent;
    }

    @media (min-width: 640px) {
      .player-card {
        width: 85px;
        padding: 0.75rem;
      }
    }

    .player-card:hover {
      transform: translateY(-4px);
      border-color: var(--primary);
    }

    .player-card.captain {
      border-color: var(--accent);
    }

    .player-card.vice-captain {
      border-color: var(--secondary);
    }

    .captain-badge {
      position: absolute;
      top: -8px;
      right: -8px;
      width: 24px;
      height: 24px;
      background: var(--gradient-gold);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.625rem;
      font-weight: 700;
      color: #000;
    }

    .vice-badge {
      background: var(--gradient-2);
      color: #fff;
    }

    .player-jersey {
      width: 40px;
      height: 40px;
      margin: 0 auto 0.5rem;
      background: var(--gradient-1);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1rem;
    }

    .player-name {
      font-size: 0.625rem;
      font-weight: 600;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    @media (min-width: 640px) {
      .player-name {
        font-size: 0.75rem;
      }
    }

    .player-team {
      font-size: 0.5rem;
      color: var(--text-muted);
      margin-top: 0.125rem;
    }

    @media (min-width: 640px) {
      .player-team {
        font-size: 0.625rem;
      }
    }

    .player-points {
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--secondary);
      margin-top: 0.25rem;
    }

    /* Bench */
    .bench-section {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--border);
    }

    .bench-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-muted);
      margin-bottom: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .bench-players {
      display: flex;
      justify-content: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .bench-player {
      opacity: 0.7;
    }

    /* Right Sidebar */
    .right-sidebar {
      display: none;
    }

    @media (min-width: 1024px) {
      .right-sidebar {
        display: block;
      }
    }

    /* Fixtures Card */
    .fixture-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem;
      background: var(--bg-card-hover);
      border-radius: 10px;
      margin-bottom: 0.75rem;
    }

    .fixture-teams {
      flex: 1;
    }

    .fixture-team {
      font-size: 0.875rem;
      font-weight: 600;
    }

    .fixture-vs {
      font-size: 0.625rem;
      color: var(--text-muted);
      margin: 0.125rem 0;
    }

    .fixture-time {
      font-size: 0.75rem;
      color: var(--primary);
      font-weight: 600;
      text-align: right;
    }

    /* Top Players */
    .top-player-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem;
      background: var(--bg-card-hover);
      border-radius: 10px;
      margin-bottom: 0.75rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .top-player-item:hover {
      background: var(--border);
    }

    .top-player-rank {
      width: 28px;
      height: 28px;
      background: var(--gradient-1);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      font-weight: 700;
    }

    .top-player-rank.gold {
      background: var(--gradient-gold);
      color: #000;
    }

    .top-player-info {
      flex: 1;
    }

    .top-player-name {
      font-size: 0.875rem;
      font-weight: 600;
    }

    .top-player-team {
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .top-player-stats {
      text-align: right;
    }

    .top-player-points {
      font-size: 0.875rem;
      font-weight: 700;
      color: var(--secondary);
    }

    .top-player-form {
      font-size: 0.625rem;
      color: var(--text-muted);
    }

    /* Leagues */
    .league-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem;
      background: var(--bg-card-hover);
      border-radius: 10px;
      margin-bottom: 0.75rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .league-item:hover {
      background: var(--border);
    }

    .league-info {
      flex: 1;
    }

    .league-name {
      font-size: 0.875rem;
      font-weight: 600;
    }

    .league-members {
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .league-rank {
      font-size: 1rem;
      font-weight: 700;
      color: var(--primary);
    }

    .league-rank.top-3 {
      color: var(--accent);
    }

    /* Mobile Bottom Nav */
    .mobile-nav {
      display: flex;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--bg-card);
      border-top: 1px solid var(--border);
      padding: 0.5rem;
      z-index: 100;
    }

    @media (min-width: 1024px) {
      .mobile-nav {
        display: none;
      }
    }

    .mobile-nav-item {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
      padding: 0.5rem;
      background: none;
      border: none;
      color: var(--text-muted);
      font-size: 0.625rem;
      cursor: pointer;
      transition: color 0.2s;
    }

    .mobile-nav-item.active {
      color: var(--primary);
    }

    .mobile-nav-icon {
      font-size: 1.25rem;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 0.75rem;
      margin-top: 1.5rem;
    }

    .btn {
      flex: 1;
      padding: 0.875rem 1.5rem;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--gradient-1);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary {
      background: var(--bg-card-hover);
      color: var(--text-primary);
      border: 1px solid var(--border);
    }

    .btn-secondary:hover {
      background: var(--border);
    }

    /* Gameweek Banner */
    .gameweek-banner {
      background: var(--gradient-1);
      border-radius: 16px;
      padding: 1.25rem;
      margin-bottom: 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .gameweek-info h2 {
      font-size: 1.125rem;
      font-weight: 700;
    }

    .gameweek-info p {
      font-size: 0.875rem;
      opacity: 0.9;
    }

    .gameweek-deadline {
      text-align: right;
    }

    .deadline-label {
      font-size: 0.75rem;
      opacity: 0.8;
    }

    .deadline-time {
      font-size: 1rem;
      font-weight: 700;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
      width: 6px;
      height: 6px;
    }

    ::-webkit-scrollbar-track {
      background: var(--bg-card);
    }

    ::-webkit-scrollbar-thumb {
      background: var(--border);
      border-radius: 3px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: var(--text-muted);
    }

    /* Add padding for mobile nav */
    @media (max-width: 1023px) {
      .main-container {
        padding-bottom: 80px;
      }
    }

    /* Mobile Cards */
    .mobile-cards {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    @media (min-width: 1024px) {
      .mobile-cards {
        display: none;
      }
    }

    .mobile-stat-card {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 1rem;
      border: 1px solid var(--border);
    }

    .mobile-stat-card .stat-value {
      font-size: 1.25rem;
    }
  </style>
</head>
