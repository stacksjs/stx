<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <style>
    body { font-family: system-ui, sans-serif; max-width: 400px; margin: 50px auto; padding: 20px; }
    .form-group { margin-bottom: 15px; }
    label { display: block; margin-bottom: 5px; font-weight: 500; }
    input { width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box; }
    input.error { border-color: #dc3545; }
    .error-msg { color: #dc3545; font-size: 14px; margin-top: 5px; }
    .btn { width: 100%; padding: 12px; background: #0066cc; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; }
    .btn:hover { background: #0052a3; }
    .hint { color: #666; font-size: 14px; margin-top: 20px; padding: 10px; background: #f5f5f5; border-radius: 5px; }
  </style>
</head>
<body>
  <h1>{{ title }}</h1>

  <form method="POST" action="/login">
    @csrf

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        value="{{ old('email') }}"
        class="@if(errors.email) error @endif"
      >
      @if(errors.email)
        <div class="error-msg">{{ errors.email[0] }}</div>
      @endif
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="@if(errors.password) error @endif"
      >
      @if(errors.password)
        <div class="error-msg">{{ errors.password[0] }}</div>
      @endif
    </div>

    <button type="submit" class="btn">Login</button>
  </form>

  <div class="hint">
    <strong>Test credentials:</strong><br>
    Email: user@example.com<br>
    Password: password
  </div>

  <p><a href="/">Back to Home</a></p>
</body>
</html>
