    }

    /* Activity card pulse */
    .activity-live {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    /* Filter button active state */
    .filter-btn.active {
      background: #059669;
      color: white;
    }
  </style>
</head>

