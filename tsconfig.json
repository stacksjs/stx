{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "stx": ["./packages/stx/src/index.ts"],
      "@stacksjs/stx": ["./packages/stx/src/index.ts"],
      "@stacksjs/desktop": ["./packages/desktop/src/index.ts"],
      "@stacksjs/ts-markdown": ["./packages/markdown/src/index.ts"],
      "@stacksjs/sanitizer": ["./packages/sanitizer/src/index.ts"],
      "@stacksjs/iconify-core": ["./packages/iconify-core/src/index.ts"],
      "@stacksjs/iconify-generator": ["./packages/iconify-generator/src/index.ts"],
      "bun-plugin-stx": ["./packages/bun-plugin/src/index.ts"],
      "bun-plugin-stx/client": ["./packages/bun-plugin/src/client.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@stacksjs/stx",
    "resolveJsonModule": true,
    "types": ["bun"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "*.stx", "./**/*.stx", "stx", ".config/gitlint.config.ts", ".config/stx.config.ts"],
  "exclude": [
    "packages/vscode/**/*",
    "packages/collections/**/*",
    "packages/benchmarks/**/*",
    "packages/create-stx/**/*",
    "packages/stx-native/**/*",
    "examples/**/*",
    "test-install/**/*",
    "node_modules",
    "dist",
    "**/dist",
    "**/dist/**",
    "packages/*/dist",
    "packages/*/dist/**",
    ".config/buddy-bot.config.ts",
    "packages/stx/src/native-build.ts",
    "packages/stx/src/interactive.ts",
    "packages/stx/bin/cli.ts",
    "packages/stx/src/composables/use-speech.ts",
    "packages/stx/src/composables/use-resize-observer.ts",
    "packages/bun-plugin/src/watch.ts",
    "**/test/**/*"
  ]
}
