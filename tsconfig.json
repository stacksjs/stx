{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "stx": ["./packages/stx/src/index.ts"],
      "@stacksjs/stx": ["./packages/stx/src/index.ts"],
      "@stacksjs/desktop": ["./packages/desktop/src/index.ts"],
      "@stacksjs/markdown": ["./packages/markdown/src/index.ts"],
      "@stacksjs/sanitizer": ["./packages/sanitizer/src/index.ts"],
      "@stacksjs/iconify-core": ["./packages/iconify-core/src/index.ts"],
      "@stacksjs/iconify-generator": ["./packages/iconify-generator/src/index.ts"],
      "bun-plugin-stx": ["./packages/bun-plugin/src/index.ts"],
      "bun-plugin-stx/client": ["./packages/bun-plugin/src/client.ts"]
    },
    "resolveJsonModule": true,
    "types": ["bun"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "*.stx", "./**/*.stx", "stx", ".config/buddy-bot.config.ts", ".config/gitlint.config.ts", ".config/stx.config.ts"],
  "exclude": ["packages/vscode/**/*", "packages/collections/**/*", "packages/benchmarks/**/*", "examples/**/*", "node_modules", "dist", "**/dist/**/*", "packages/*/dist/**/*"]
}
