{
  "name": "@stx/devtools",
  "version": "1.0.0",
  "private": true,
  "description": "Development tools for STX templating engine",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run devtools-server.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "test": "bun test --preload ./happy-dom.ts",
    "test:watch": "bun test --watch --preload ./happy-dom.ts",
    "test:coverage": "bun test --coverage --preload ./happy-dom.ts"
  },
  "dependencies": {
    "bun-plugin-stx": "workspace:*"
  },
  "devDependencies": {
    "unocss": "^66.3.2",
    "happy-dom": "^15.10.2"
  }
}
