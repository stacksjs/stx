<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <script>
    const title = "My stx Page"
    const description = "A page built with stx"
    const items = [
      "Templates with TypeScript support",
      "Powerful directives",
      "Reusable components"
    ]
  </script>
  <style>
    :root {
      --primary-color: #3498db;
      --dark-color: #34495e;
      --font-main: system-ui, -apple-system, sans-serif;
    }
    body {
      font-family: var(--font-main);
      line-height: 1.6;
      color: var(--dark-color);
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }
    h1 { color: var(--primary-color); }
  </style>
</head>
<body>
  <header>
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>
  </header>

  <div class="content">
    <h2>Features</h2>
    <ul>
      @foreach(items as item)
        <li>{{ item }}</li>
      @endforeach
    </ul>
  </div>
</body>
</html>