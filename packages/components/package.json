{
  "name": "@stacksjs/components",
  "type": "module",
  "version": "0.2.0",
  "description": "A modern component library built with STX, featuring headwind utility classes and TypeScript syntax highlighting.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/stx/tree/main/packages/components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/stx.git",
    "directory": "./packages/components"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/stx/issues"
  },
  "keywords": [
    "components",
    "ui",
    "stx",
    "headwind",
    "typescript",
    "bun",
    "component-library"
  ],
  "sideEffects": ["**/*.css"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist", "src"],
  "scripts": {
    "build": "bun --bun build.ts",
    "dev": "bun --bun build.ts --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx --bun pickier lint",
    "lint:fix": "bunx --bun pickier lint --fix",
    "typecheck": "bun tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@stacksjs/headwind": "^0.1.3",
    "@stacksjs/stx": "workspace:*",
    "bun-plugin-stx": "workspace:*",
    "ts-syntax-highlighter": "^0.2.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "bun-plugin-dtsx": "^0.9.9",
    "pickier": "^0.1.11",
    "typescript": "^5.9.3"
  }
}
