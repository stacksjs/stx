{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "rootDir": "src",
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
