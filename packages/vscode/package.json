        "stxTypescriptPlugin.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable TypeScript language features in stx files"
        },
        "stx.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics (errors and warnings) for stx files"
        },
        "stx.diagnostics.validateUnclosedDirectives": {
          "type": "boolean",
          "default": true,
          "description": "Validate unclosed directives like @if without @endif"
        },
        "stx.diagnostics.validateMismatchedDirectives": {
          "type": "boolean",
          "default": true,
          "description": "Validate mismatched directives like @if closed with @endforeach"
        },
        "stx.diagnostics.validateTemplatePaths": {
          "type": "boolean",
          "default": true,
          "description": "Validate that template paths in @include and @component directives exist"
        },
        "stx.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion for stx directives"
        },
        "stx.completion.showSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Show snippet completions with placeholders for directive parameters"
        },
        "stx.hover.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover documentation for stx directives"
        },
        "stx.hover.showExamples": {
          "type": "boolean",
          "default": true,
          "description": "Show code examples in hover documentation"
        },
        "stx.codeActions.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable quick fixes and code actions"
        },
        "stx.folding.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable code folding for directive blocks"
        },
        "stx.semanticHighlighting.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic syntax highlighting for directives"
        },
        "stx.utilityClasses.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable utility class features (tooltips, color previews, sorting)"
        },
        "stx.utilityClasses.framework": {
          "type": "string",
          "enum": [
            "tailwind",
            "unocss",
            "auto"
          ],
          "default": "auto",
          "markdownDescription": "Utility CSS framework to use. `auto` will detect from config files"
        },
        "stx.utilityClasses.colorPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show inline color decorations for color utility classes"
        },
        "stx.utilityClasses.hoverPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show CSS output when hovering over utility classes"
        },
        "stx.utilityClasses.underline": {
          "type": "boolean",
          "default": true,
          "description": "Underline matched utility classes"
        },
        "stx.utilityClasses.sortOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sort utility classes on file save"
        },
        "stx.utilityClasses.colorPreviewRadius": {
          "type": "string",
          "default": "0",
          "description": "Border radius for color preview blocks ('0' for square like Tailwind, '50%' for circle)"
        },
        "stx.utilityClasses.selectionStyle": {
          "type": "boolean",
          "default": false,
          "description": "Show CSS preview for selected utility classes"
        },
        "stx.utilityClasses.autocomplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete for utility classes"
        },
        "headwind.remToPxRatio": {
          "type": "number",
          "default": 16,
          "description": "Rem to px conversion ratio for hover previews"
        }
      }
