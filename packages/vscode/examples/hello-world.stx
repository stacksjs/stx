<!DOCTYPE html>
<html>
<head>
  <title>Hello World - STX Example</title>
</head>
<body>
  <h1>Hello World!</h1>
  
  @ts
  const message = "Welcome to STX!"
  const currentTime = new Date().toLocaleTimeString()
  @endts

  <div class="message">
    <p>{{ message }}</p>
    <p>Current time: {{ currentTime }}</p>
  </div>

  <style>
    .message {
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      margin: 1rem;
      text-align: center;
    }
  </style>
</body>
</html>