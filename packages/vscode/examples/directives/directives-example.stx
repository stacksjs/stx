<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>stx Directives Example</title>
</head>
<body>
  <h1>stx Directives Demo</h1>

  @ts
  const items = ['Apple', 'Banana', 'Orange', 'Grape']
  const user = {
    name: 'John Doe',
    isAdmin: true,
    preferences: {
      theme: 'dark',
      notifications: true
    }
  }
  const showMessage = true
  @endts

  <!-- Conditional Directives -->
  <section>
    <h2>Conditional Directives</h2>

    @if(user.isAdmin)
      <div class="admin-panel">
        <p>Welcome, Administrator!</p>
      </div>
    @else
      <div class="user-panel">
        <p>Welcome, User!</p>
      </div>
    @endif

    @unless(user.preferences.notifications)
      <p>You have disabled notifications</p>
    @endunless
  </section>

  <!-- Loop Directives -->
  <section>
    <h2>Loop Directives</h2>

    <ul>
      @foreach(items as item, index)
        <li>{{ index + 1 }}. {{ item }}</li>
      @endforeach
    </ul>

    @for(let i = 0; i < 3; i++)
      <p>Counter: {{ i }}</p>
    @endfor
  </section>

  <!-- Switch Directive -->
  <section>
    <h2>Switch Directive</h2>

    @switch(user.preferences.theme)
      @case('dark')
        <p>Dark theme is active</p>
        @break
      @case('light')
        <p>Light theme is active</p>
        @break
      @default
        <p>System theme is active</p>
    @endswitch
  </section>

  <!-- Animation Directives -->
  <section>
    <h2>Animation Directives</h2>

    @transition('fade', 400, 'ease-in-out')
      @if(showMessage)
        <div class="message">
          <p>This message will fade in/out</p>
        </div>
      @endif
    @endtransition

    @motion(true)
      <div class="animated-box"></div>
    @endmotion
  </section>

  <!-- Raw Content -->
  <section>
    <h2>Raw Content</h2>

    @raw
      <p>This content will not be processed: {{ user.name }}</p>
    @endraw
  </section>

  <style>
    section {
      margin: 2rem 0;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .admin-panel {
      background: #e3f2fd;
      padding: 1rem;
      border-radius: 4px;
    }
    .user-panel {
      background: #f5f5f5;
      padding: 1rem;
      border-radius: 4px;
    }
    .message {
      background: #4caf50;
      color: white;
      padding: 1rem;
      border-radius: 4px;
    }
    .animated-box {
      width: 50px;
      height: 50px;
      background: #ff4081;
      margin: 1rem 0;
      animation: bounce 1s infinite;
    }
    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }
  </style>
</body>
</html>
